<%- include("../layouts/header.ejs") %>

<img src="userImages/<%= user.image %>" alt="<%= user.image %>" width="100px" height="100px">
<form action="edit" method="post" enctype="multipart/form-data">
    <br>
    <input type="file" name="image"><br><br>
    <input type="hidden" name="user_id" value="<%= user._id %>">
    <input type="text" name="name" value="<%= user.name %>" placeholder="Enter Name" required> <br><br>
    <input type="email" name="email" value="<%= user.email %>" placeholder="Enter Email" required> <br><br>
    <input type="tel" name="mobile" value="<%= user.mobile %>" placeholder="Enter Mobil" required> 
    <br><br>
    <input type="submit" value="Update Profile">
</form>

<%- include("../layouts/footer.ejs") %>