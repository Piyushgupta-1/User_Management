<%- include("../layouts/header.ejs") %>

<h1>Welcome <%= user.name %></h1>

<img src="userImages/<%= user.image %>" alt="<%= user.image %>" height="100px" width="100px">
<br><br>
<table border="solid">
    <tr>
        <td>Email</td>
        <td><%= user.email %></td>
    </tr>
    <tr>
        <td>Mobile</td>
        <td><%= user.mobile %></td>
    </tr>
    <tr>
        <td>Verified</td>
        <td><% if(user.
            is_verified) { %>
                <span>Yes</span>
            <% } %></td>
    </tr>
</table>
<br>
<a href="/edit?id=<%= user._id %>">Edit</a> 
&nbsp; &nbsp;
<a href="/logout">Logout</a>

<%- include("../layouts/footer.ejs") %>

